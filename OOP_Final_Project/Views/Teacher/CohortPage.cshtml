@model IEnumerable<OOP_Final_Project.Models.Account>

@{
    Layout = null;
    if (Session["id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CohortPage</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CohortName)
            </th>
            <th>
                @Html.DisplayName("Number Of Student")
            </th>
            <th></th>
        </tr>
        @if (!Model.Any())
        {
            @Html.DisplayName("No Cohort")
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CohortName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Account.Count)
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>
                </tr>
            }
        }
    </table>
</body>
</html>
