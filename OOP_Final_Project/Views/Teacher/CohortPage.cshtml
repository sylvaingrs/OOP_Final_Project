﻿@model IEnumerable<OOP_Final_Project.Models.Account>

@{
    //Roxane Seibel 74527 - Jon Gouspy 74538 - Sylvain Gross 74525 - Leith Chakroun 74529
    Layout = null;
    if (Session["id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Content/custom.css" />
    <style>

        .d-container {
            display: flex;
            margin-bottom: 15px;
            margin-top: 15px;
        }

        dl {
            margin-top: 40px;
            margin-bottom: 40px;
            background-color: #E5DDC5;
            padding: 20px;
            border-radius: 10px;
            width: 550px;
            border: 1px solid black;
        }

        dt {
            width: 100px;
            margin-right: 30px;
        }

        dd {
            margin-left: 30px;
        }

        tbody {
            display: table-row-group;
            vertical-align: middle;
        }

        th, td {
            padding: 8px;
        }

        a {
            padding: 7px 5px 5px 7px;
        }
    </style>
</head>
<body>

    <h2>@ViewBag.Title</h2>
    <h4>Teacher Account</h4>
    <hr />

    <dl>
        <table class="table">
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Email
                </th>
                <th></th>
            </tr>
            @if (!Model.Any())
            {
                @Html.DisplayName("No Cohort")
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td colspan="4" class="line" style=" padding: 0px;"></td>
                    </tr>
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.FisrtName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </td>
                    </tr>
                }
            }
        </table>
    </dl>
    @Html.ActionLink("Back to Menu", "Index")
</body>
</html>