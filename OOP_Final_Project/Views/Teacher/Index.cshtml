@model IEnumerable<OOP_Final_Project.Models.Cohort>

@{
    Layout = null;
    if (Session["id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }

    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Content/custom.css" />
    <style>
        .d-container {
            display: flex;
            margin-bottom: 15px;
            margin-top: 15px;
        }

        dl {
            margin-top: 40px;
            margin-bottom: 40px;
            background-color: #E5DDC5;
            padding: 20px;
            border-radius: 10px;
            width: 450px;
            border: 1px solid black;
        }

        dt {
            width: 100px;
            margin-right: 30px;
        }

        dd {
            margin-left: 30px;
        }


        a {
            text-decoration: none;
            background-color: #C6EBC5;
            color: var(--gray-700);
            padding: 1px 7px 1px 7px;
            border-radius: 10px;
            border: 1px solid gray;
            margin-left: 8px;
            margin-right: 8px;
        }
    </style>
</head>
<body>

    <h2>@ViewBag.Title</h2>

    <dl>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CohortName)
                </th>
                <th>
                    @Html.DisplayName("Number Of Student")
                </th>
                <th></th>
            </tr>
            @if (!Model.Any())
            {
                @Html.DisplayName("No Cohort")
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CohortName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Account.Count)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "CohortPage", new { id = item.Id })
                        </td>
                        <td>
                            @Html.ActionLink("Exam List", "ExamPage", new { id = item.Id })
                        </td>
                    </tr>
                }
            }
        </table>
        </dl>
            @Html.ActionLink("Logout", "../Login")
</body>
</html>