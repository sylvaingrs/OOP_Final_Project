@model OOP_Final_Project.Models.Result

@{
    ViewBag.Title = "AddGrade";
    Layout = null;
    if (Session["id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Content/custom.css" />
    <style>
        a {
            text-decoration: none;
            background-color: #C6EBC5;
            color: var(--gray-700);
            padding: 1px 7px 1px 7px;
            border-radius: 10px;
            border: 1px solid gray;
            margin-left: 8px;
            margin-right: 8px;
        }

        .d-container {
            display: flex;
            margin-bottom: 15px;
            margin-top: 15px;
        }

        dl {
            margin-top: 40px;
            margin-bottom: 40px;
            background-color: #E5DDC5;
            padding: 20px;
            border-radius: 10px;
            width: 300px;
            border: 1px solid black;
        }

        dt {
            width: 100px;
            margin-right: 30px;
        }

        dd {
            margin-left: 30px;
        }
    </style>
</head>
<body>


    <h2>AddGrade</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

      
<div class="form-horizontal">
    <h4>Result</h4>
    <hr />
    <dl>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.AccountId, "Account Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("StudentId", ViewBag.AccountList as SelectList, "Select Student", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AccountId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AccountId, "Exam Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                @Html.Raw(ViewBag.Exam)
                @Html.ValidationMessageFor(model => model.ExamId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Grade, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Grade, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Grade, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </dl>
</div>
       
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
    </body>
</html>