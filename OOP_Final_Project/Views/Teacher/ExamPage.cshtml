@model IEnumerable<OOP_Final_Project.Models.Exam>

@{
    Layout = null;
    if (Session["id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Content/custom.css" />
    <style>

        a {
            text-decoration: none;
            background-color: #C6EBC5;
            color: var(--gray-700);
            padding: 7px;
            border-radius: 10px;
            border: 1px solid gray;
            margin-left: 8px;
            margin-right: 8px;
        }
        .d-container {
            display: flex;
            margin-bottom: 15px;
            margin-top: 15px;
        }

        dl {
            margin-top: 40px;
            margin-bottom: 40px;
            background-color: #E5DDC5;
            padding: 20px;
            border-radius: 10px;
            width: 950px;
            border: 1px solid black;
        }

        table {
            text-align: center
        }

        dt {
            width: 100px;
            margin-right: 30px;
        }

        dd {
            margin-left: 30px;
        }
        tr {
            align-items: center;
        }
        th, td {
            padding: 8px;
        }
    </style>
</head>
<body>

    <h2>ExamPage</h2>

    <p>
        @Html.ActionLink("Back to Menu", "Index")
    </p>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <dl>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Coefficient)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Course.CourseName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td colspan="7" class="line" style=" padding: 0px;"></td>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Coefficient)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.CourseName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit Exam", "EditExam", new { id = item.Id })
                    </td>
                    <td>
                        @Html.ActionLink("Details Exam", "DetailsExam", new { id = item.Id })
                    </td>
                    <td>
                        @Html.ActionLink("Delete Exam", "DeleteExam", new { id = item.Id })
                    </td>
                    <td>
                        @Html.ActionLink("Add Grade", "AddGrade", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
        </dl>
</body>
</html>