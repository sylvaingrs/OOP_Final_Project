@model IEnumerable<OOP_Final_Project.Models.Account>

@{
    ViewBag.Title = "Index";
    Layout = null;
    if (Session["id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <h2>Student list</h2>
    <hr />
    <table id="table" class="table" style="margin-bottom: 30px;">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FisrtName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Password)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CohortId)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <hr />
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>

                    <td>
                        <hr />
                        @Html.DisplayFor(modelItem => item.FisrtName)
                    </td>

                    <td>
                        <hr />
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>

                    <td>
                        <hr />
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>

                    <td>
                        <hr />
                        @Html.DisplayFor(modelItem => item.Password)
                    </td>

                    <td>
                        <hr />
                        @Html.DisplayFor(modelItem => item.AccountType)
                    </td>

                    <td>
                        <hr />
                        @Html.DisplayFor(modelItem => item.CohortId)
                    </td>

                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>