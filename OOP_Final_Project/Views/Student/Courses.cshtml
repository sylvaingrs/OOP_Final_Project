@model IEnumerable<OOP_Final_Project.Models.Course>
@*@model OOP_Final_Project.Models.Course*@

@{
    Layout = null;
    ViewBag.Title = "Courses";
    if (Session["id"] == null)
    {
        Response.Redirect("~/Login/Index");
    }
}

<h2>Courses</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account.FisrtName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherId)
        </th>
        <th></th>
    </tr>
    @if (!Model.Any())
    {
        <p>Aucun cours trouvé.</p>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.FisrtName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherId)
                </td>
            </tr>
        }
    }

</table>
